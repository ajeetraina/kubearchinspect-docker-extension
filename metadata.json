{
  "icon": "kubearchinspect.svg",
  "vm": {
    "image": "${DESKTOP_PLUGIN_IMAGE}",
    "exposeDockerSocket": true
  },
  "mounts": [
    {
      "source": "$HOME/.kube",
      "target": "/root/.kube",
      "type": "bind",
      "readOnly": true
    }
  ],
  "ui": {
    "dashboard-tab": {
      "title": "KubeArchInspect",
      "root": "/ui",
      "src": "index.html"
    }
  }
}
